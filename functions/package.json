{
  "name": "functions",
  "scripts": {
    "lint": "pnpm eslint src",
    "format": "npx prettier \"src/*\\.(ts(x)?|module\\.css)\" --write",
    "checkFormat": "npx prettier \"src/*\\.(ts(x)?|module\\.css)\" --check",
    "build": "tsc",
    "watchForEmulators": "NEXT_PUBLIC_USE_EMULATORS=1 tsc -w",
    "serve": "pnpm run build && firebase emulators:start --only functions",
    "shell": "pnpm run build && firebase functions:shell",
    "start": "pnpm run shell",
    "deploy": "firebase deploy --only functions:analytics",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "20"
  },
  "type": "module",
  "main": "lib/functions/src/index.js",
  "dependencies": {
    "@aws-sdk/client-sesv2": "catalog:",
    "@google-cloud/firestore": "catalog:",
    "@google-cloud/secret-manager": "catalog:",
    "date-fns": "catalog:",
    "fast-sha256": "catalog:",
    "firebase": "catalog:",
    "firebase-admin": "catalog:",
    "firebase-functions": "catalog:",
    "fp-ts": "catalog:",
    "hast-util-to-html": "catalog:",
    "hast-util-truncate": "catalog:",
    "io-ts": "catalog:",
    "lodash": "catalog:",
    "mdast-util-find-and-replace": "catalog:",
    "mdast-util-from-markdown": "catalog:",
    "micromark-util-chunked": "catalog:",
    "micromark-util-classify-character": "catalog:",
    "micromark-util-resolve-all": "catalog:",
    "micromark-util-types": "catalog:",
    "rehype-external-links": "catalog:",
    "remark-directive": "catalog:",
    "remark-gfm": "catalog:",
    "remark-parse": "catalog:",
    "remark-rehype": "catalog:",
    "remark-stringify": "catalog:",
    "twemoji-parser": "catalog:",
    "unified": "catalog:",
    "unist-util-is": "catalog:",
    "unist-util-visit": "catalog:"
  },
  "devDependencies": {
    "@eslint/eslintrc": "catalog:",
    "@eslint/js": "catalog:",
    "@types/lodash": "catalog:",
    "@types/mdast": "catalog:",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "eslint-import-resolver-typescript": "catalog:",
    "eslint-plugin-import": "catalog:",
    "eslint-plugin-redos": "catalog:",
    "firebase-functions-test": "catalog:",
    "firebase-tools": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:"
  },
  "private": true
}
