{
  "name": "functions",
  "scripts": {
    "lint": "pnpm eslint src",
    "format": "npx prettier \"src/*\\.(ts(x)?|module\\.css)\" --write",
    "checkFormat": "npx prettier \"src/*\\.(ts(x)?|module\\.css)\" --check",
    "build": "tsc",
    "watchForEmulators": "NEXT_PUBLIC_USE_EMULATORS=1 tsc -w",
    "serve": "pnpm run build && firebase emulators:start --only functions",
    "shell": "pnpm run build && firebase functions:shell",
    "start": "pnpm run shell",
    "deploy": "firebase deploy --only functions:analytics",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "20"
  },
  "type": "module",
  "main": "lib/functions/src/index.js",
  "dependencies": {
    "@aws-sdk/client-sesv2": "^3.992.0",
    "@google-cloud/firestore": "^8.3.0",
    "@google-cloud/secret-manager": "^6.0.1",
    "date-fns": "^4.1.0",
    "fast-sha256": "^1.3.0",
    "firebase": "^12.9.0",
    "firebase-admin": "^13.4.0",
    "firebase-functions": "^7.0.5",
    "fp-ts": "^2.16.10",
    "hast-util-to-html": "^9.0.5",
    "hast-util-truncate": "^2.0.0",
    "io-ts": "^2.2.22",
    "lodash": "^4.17.21",
    "mdast-util-find-and-replace": "^3.0.2",
    "mdast-util-from-markdown": "^2.0.0",
    "micromark-util-chunked": "^2.0.1",
    "micromark-util-classify-character": "^2.0.1",
    "micromark-util-resolve-all": "^2.0.1",
    "micromark-util-types": "^2.0.2",
    "rehype-external-links": "^3.0.0",
    "remark-directive": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "remark-stringify": "^11.0.0",
    "twemoji-parser": "^14.0.0",
    "unified": "^11.0.4",
    "unist-util-is": "^6.0.0",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@types/lodash": "^4.17.17",
    "@types/mdast": "^4.0.4",
    "@types/react": "^19.1.6",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-redos": "^4.5.0",
    "firebase-functions-test": "^3.4.1",
    "firebase-tools": "^15.6.0",
    "prettier": "^3.8.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.56.0"
  },
  "private": true
}
